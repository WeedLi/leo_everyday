<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_pic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:foreground="?attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--个人信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.leo.everyday.widget.CircleImageView
                android:id="@+id/iv_head_user"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="@dimen/padding1"
                android:src="@mipmap/default_icon" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的名字叫做Leo" />

        </LinearLayout>


        <!--视频信息-->
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding1"
            android:layout_marginLeft="@dimen/padding1"
            android:layout_marginRight="@dimen/padding1"
            android:text="我的名字叫做Leo我的名字叫做Leo我的名字叫做Leo我的名字叫做Leo我的名字叫做Leo我的名字叫做Leo我的名字叫做Leo我的名字叫做Leo我的名字叫做Leo" />

        <!--播放视频-->
        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/video_palyer_jz"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!--点赞 评论-->

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

    </LinearLayout>
</android.support.v7.widget.CardView>